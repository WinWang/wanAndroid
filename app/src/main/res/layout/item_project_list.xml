<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="500pt"
    android:layout_margin="20pt"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@color/slide_back"
    app:cardCornerRadius="10pt"
    app:cardElevation="10pt">

    <ImageView
        android:id="@+id/iv_pv_item_cover"
        android:layout_width="250pt"
        android:layout_height="400pt"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="50pt"
        android:src="@color/colorPrimary" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_pv_item_head"
        android:layout_width="90pt"
        android:layout_height="90pt"
        android:layout_marginLeft="350pt"
        android:layout_marginTop="50pt"
        android:src="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/tv_pv_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="450pt"
        android:layout_marginRight="70pt"
        android:layout_marginTop="62pt"
        android:singleLine="true"
        android:text="hahahha"
        android:textColor="@color/colorText"
        android:textSize="45pt" />

    <TextView
        android:id="@+id/tv_pv_item_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="350pt"
        android:layout_marginRight="70pt"
        android:layout_marginTop="150pt"
        android:maxLines="3"
        android:text="asdfasdfasdfasdfasdf"
        android:textColor="@color/colorText"
        android:textSize="40pt" />

    <TextView
        android:textColor="@color/colorText"
        android:id="@+id/tv_pv_item_data_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="80pt"
        android:layout_marginLeft="350pt"
        android:singleLine="true"
        android:text="哈哈哈哈哈哈哈"
        android:textSize="45pt" />

</android.support.v7.widget.CardView>
