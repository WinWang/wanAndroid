<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20pt"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@color/slide_back"
    app:cardCornerRadius="10pt"
    app:cardElevation="10pt">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginRight="30pt"
            android:id="@+id/knowledge_hierarchy_enter_iv"
            android:layout_width="70pt"
            android:layout_height="70pt"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            android:src="@drawable/ic_right_arrow" />

        <TextView
            android:layout_marginTop="30pt"
            android:layout_marginLeft="30pt"
            android:id="@+id/item_knowledge_hierarchy_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/orangeColor"
            android:textSize="45pt"
            tools:text="开发环境" />

        <TextView
            android:layout_marginRight="120pt"
            android:layout_marginBottom="30pt"
            android:layout_marginLeft="30pt"
            android:textSize="38pt"
            android:layout_below="@+id/item_knowledge_hierarchy_title"
            android:id="@+id/item_knowledge_hierarchy_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40pt"
            android:textColor="@color/colorText"
            tools:text="Android           Studio相关                             gradle  官方发布" />

    </RelativeLayout>


</android.support.v7.widget.CardView>
